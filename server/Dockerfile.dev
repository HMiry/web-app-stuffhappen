# Use Node.js LTS version
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Create db directory and ensure proper permissions
RUN mkdir -p db && chmod 755 db

# Expose port
EXPOSE 3001

# Start the application with nodemon for development
CMD ["npm", "run", "dev"] 