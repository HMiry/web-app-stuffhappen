# Use Node.js LTS version
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Create db directory and ensure proper permissions
RUN mkdir -p db && chmod 755 db

# Expose port
EXPOSE 3001

# Start the application
CMD ["npm", "start"] 